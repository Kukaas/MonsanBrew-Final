{
    "rewrites": [
        {
            "source": "/(.*)",
            "destination": "/"
        }
    ],
    "headers": [
        {
            "source": "/sitemap.xml",
            "headers": [
                {
                    "key": "Content-Type",
                    "value": "application/xml"
                },
                {
                    "key": "Cache-Control",
                    "value": "public, max-age=3600, must-revalidate"
                }
            ]
        },
        {
            "source": "/(.*)",
            "headers": [
                {
                    "key": "Content-Security-Policy",
                    "value": "default-src 'self'; connect-src 'self' https://monsanbrew-server.vercel.app https://api.mapbox.com https://events.mapbox.com http://localhost:3000; script-src 'self' https://apis.google.com https://api.mapbox.com blob:; worker-src 'self' blob:; style-src 'self' https://fonts.googleapis.com https://api.mapbox.com 'unsafe-inline'; font-src 'self' https://fonts.gstatic.com; img-src 'self' data: blob: https://api.mapbox.com;"
                },
                {
                    "key": "X-Frame-Options",
                    "value": "SAMEORIGIN"
                },
                {
                    "key": "X-Content-Type-Options",
                    "value": "nosniff"
                },
                {
                    "key": "Referrer-Policy",
                    "value": "no-referrer"
                },
                {
                    "key": "Permissions-Policy",
                    "value": "geolocation=(self), microphone=()"
                }
            ]
        }
    ],
    "build": {
        "env": {
            "GENERATE_SITEMAP": "true"
        }
    },
    "cleanUrls": true,
    "trailingSlash": false
}
